<div id="header">
  <h1>Searching for - <%= @search_term %></h1>
  <% if @recipes.length == 0 %>
  <p id="msg">No recepies found with relevant information... Sorry</p>
</div>
<% else %>
<table border="1" class="center" >
  <tr>
  	<th>Image</th>
  	<th>Title</th>
  	<th>Social rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
  	<td class= <%= cycle('odd', 'even')%>><%= link_to image_tag(recipe["image_url"], size: '100'), recipe["source_url"] %></td>
  	<td class= <%= cycle('odd', 'even')%>><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
  	<td class= <%= cycle('odd', 'even')%>><%= formatted_rank recipe["social_rank"] %></td>
  </tr>
  <% end %>
</table>
<% end %>